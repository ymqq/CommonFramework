<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/earning_recyclerview_item_date_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2016-12-21"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earning_recyclerview_item_count_tv"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="30"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earning_recyclerview_item_earnings_tv"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="3000.00"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earning_recyclerview_item_more_tv"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text=">"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

</LinearLayout>